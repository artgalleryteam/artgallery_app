<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait"
    tools:context=".PreviewActivity">


    <ImageView
        android:id="@+id/preview_blue_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/preview_blue_frame"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/preview_peach_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/preview_peach_frame" />

    <ImageView
        android:id="@+id/preview_central_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="90dp"
        android:rotation="13"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/preview_central_frame" />

    <ImageView
        android:id="@+id/preview_orange_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/preview_orange_frame" />

    <ImageView
        android:id="@+id/preview_blue_frame2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/preview_blue_frame2" />


    <TextView
        android:id="@+id/preview_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/literata_bold"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/preview_appname"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="@+id/preview_central_frame"
        app:layout_constraintEnd_toEndOf="@+id/preview_central_frame"
        app:layout_constraintStart_toStartOf="@+id/preview_central_frame"
        app:layout_constraintTop_toTopOf="@+id/preview_central_frame" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/preview_button"
        android:layout_width="240dp"
        android:layout_height="70dp"
        android:layout_marginTop="-20dp"
        android:background="@drawable/sign_in_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/preview_central_frame">

        <TextView
            android:id="@+id/preview_button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/literata_semibold"
            android:text="@string/preview_button"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>